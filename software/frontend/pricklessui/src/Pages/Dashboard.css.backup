.dashboard {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.dashboard h2 {
  font-size: 2rem;
  color: #219c27;
  text-align: center;
  margin-bottom: 30px;
}

/* Loading and No Data States */
.loading, .no-data {
  text-align: center;
  padding: 40px;
  background: #f9f9f9;
  border-radius: 10px;
  margin: 20px 0;
}

/* Current Reading Display */
.current-reading {
  background: linear-gradient(135deg, #4caf50, #45a049);
  color: rgb(255, 255, 255);
  border-radius: 15px;
  padding: 30px;
  margin-bottom: 30px;
  text-align: center;
}

.current-glucose h3 {
  margin: 0 0 20px 0;
  font-size: 1.5rem;
  opacity: 0.9;
}

.glucose-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 10px;
  margin-bottom: 20px;
}

.glucose-value .value {
  font-size: 4rem;
  font-weight: bold;
}

.glucose-value .unit {
  font-size: 1.5rem;
  opacity: 0.8;
}

.reading-info {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

.reading-info p {
  margin: 0;
  opacity: 0.9;
}

/* Summary Boxes */
.summary-boxes {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.summary-box {
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 25px;
  text-align: center;
  border-left: 4px solid #4caf50;
}

.summary-box h3 {
  margin: 0 0 15px 0;
  color: #333;
  font-size: 1.1rem;
}

.summary-box p {
  font-size: 2rem;
  font-weight: bold;
  color: #4caf50;
  margin: 0 0 10px 0;
}

.summary-box small {
  color: #666;
  font-size: 0.9rem;
}

/* PPG Features */
.ppg-features {
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 25px;
  margin-bottom: 30px;
}

.ppg-features h3 {
  margin: 0 0 20px 0;
  color: #333;
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
}

.feature {
  display: flex;
  justify-content: space-between;
  padding: 10px 15px;
  background: #f5f5f5;
  border-radius: 8px;
  border-left: 3px solid #4caf50;
}

.feature span:first-child {
  color: #666;
  font-weight: 500;
}

.feature span:last-child {
  color: #333;
  font-weight: bold;
}

/* Table Styles */
.table-container {
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 25px;
  overflow-x: auto;
}

.table-container h3 {
  margin: 0 0 20px 0;
  color: #333;
  text-align: center;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

table th,
table td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

table th {
  background-color: #4caf50;
  color: white;
  font-weight: 600;
}

table tr:hover {
  background-color: #f5f5f5;
}

table tr:nth-child(even) {
  background-color: #f9f9f9;
}

/* Responsive Design */
@media (max-width: 768px) {
  .dashboard {
    padding: 10px;
  }
  
  .reading-info {
    flex-direction: column;
    gap: 10px;
  }
  
  .glucose-value .value {
    font-size: 3rem;
  }
  
  .summary-boxes {
    grid-template-columns: 1fr;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
  }
}